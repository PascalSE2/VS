package sensor;

import java.net.InetAddress;
import java.net.UnknownHostException;

public class URLGenerate {
	
	private final static int port = 8000;
	private final static String PROTOKOLL = "http://";
	private final static String SENSOR = "/Sensor";
	private static int id = 1;
			
	public static String getNextSensorURL() {
		String own_id = "";
		
		try {
			own_id = PROTOKOLL+InetAddress.getLocalHost().getHostAddress()+":"+port+SENSOR;
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		id++;
		return own_id;
	}
}
